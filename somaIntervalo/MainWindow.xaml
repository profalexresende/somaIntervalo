<Window x:Class="somaIntervalo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:somaIntervalo"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="200">
    <Grid>
        <Label x:Name="lblNumero1" Content="Digite o número 1:" HorizontalAlignment="Left" Margin="15,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtNumero1" HorizontalAlignment="Left" Margin="22,36,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="lblNumero2" Content="Digite o número 2" HorizontalAlignment="Left" Margin="15,54,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtNumero2" HorizontalAlignment="Left" Margin="22,79,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnCalcular" Content="Calcular" HorizontalAlignment="Left" Margin="22,102,0,0" VerticalAlignment="Top" Width="120" Click="btnFatorial_Click"/>
        <Label x:Name="lblResultado" Content="Aqui aparecerá o resultado" HorizontalAlignment="Left" Margin="22,128,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
